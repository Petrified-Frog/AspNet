@page "/customers"



<h3>Customers</h3>
<p>
    <NavLink class="nav-link" href="Customers/create">
        <span class="oi oi-plus" aria-hidden="true"></span> Create New Customer
    </NavLink>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name                
            </th>
            <th>
                Email                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in customers)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Email                   
                </td>
                <td>
                    <NavLink href="Customers/edit">Edit</NavLink>
                    <NavLink href="Customers/edit">Details</NavLink>
                    <NavLink href="Customers/edit">Delete</NavLink>   
                </td>
            </tr>
        }
    </tbody>
</table>



@code {
    private List<Customer> customers;
    protected override async Task OnInitializedAsync()
    {
        customers = new();
        customers = await Http.GetFromJsonAsync<List<Customer>>("api/customers");
    }

}
